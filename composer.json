{
  "name": "adrian-tilita/resource-exposer",
  "description": "A laravel tool that exposes models through HTTP Api",
  "license": "MIT",
  "authors": [
    {
      "name": "Adrian Tilita",
      "email": "adrian@tilita.ro",
      "homepage": "http://adrian.tilita.ro",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">7.0",
    "needle-project/common": "^0.3",
    "laravel/framework": "5.4.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "2.*",
    "phpmd/phpmd" : "@stable"
  },
  "autoload": {
    "psr-4": {"AdrianTilita\\ResourceExposer\\": "src/"}
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan exposure:setup"
    ],
    "post-update-cmd": [
      "php artisan exposure:setup"
    ]
  },
  "minimum-stability": "stable"
}
